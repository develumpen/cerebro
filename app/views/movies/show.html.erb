<div class="movie media-item">
  <%= image_tag("https://image.tmdb.org/t/p/w92#{@movie[:poster_path]}", { width: 60 }) %>
  <div class="content">
    <h1><%= @movie[:title] %></h1>
    <%= @movie[:release_date].split("-").first %>
  </div>
  <div class="overview">
    <%= @movie[:overview] %>
  </div>
</div>

